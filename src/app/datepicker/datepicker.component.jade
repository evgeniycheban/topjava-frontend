div.datepicker-input
  input.form-control(value="{{ dateModel | dateFormat }}", readonly, (click)="showOrHidePopup()")
  i.glyphicon.glyphicon-calendar((click)="showOrHidePopup()")
  i.glyphicon.glyphicon-remove.text-danger(*ngIf="dateModel", (click)="clearDateModel()")

datepicker.datepicker-popup(*ngIf="showPopup", [(ngModel)]="dateModel", [showWeeks]=true, (selectionDone)="hidePopup($event)")
