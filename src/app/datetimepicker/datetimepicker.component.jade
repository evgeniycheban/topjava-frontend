div.datetimepicker-input
  input.form-control(value="{{ dateTimeModel | dateTimeFormat }}", readonly, (click)="showOrHidePopup()", placeholder="Date")
  i.glyphicon.glyphicon-calendar((click)="showOrHidePopup()")
  i.glyphicon.glyphicon-remove.text-danger((click)="clearDateTimeModel()")
div.datetimepicker-popup
  datepicker(*ngIf="showPopup", [(ngModel)]="dateModel", (ngModelChange)="changeDateModel($event)")
  timepicker(*ngIf="showPopup", [(ngModel)]="timeModel", (ngModelChange)="changeTimeModel($event)")
