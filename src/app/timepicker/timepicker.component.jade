div.timepicker-input
  input.form-control(value="{{ timeModel | timeFormat }}", readonly, (click)="showOrHidePopup()")
  i.glyphicon.glyphicon-time((click)="showOrHidePopup()")
  i.glyphicon.glyphicon-remove.text-danger(*ngIf="timeModel", (click)="clearTimeModel()")

timepicker.timepicker-popup(*ngIf="showPopup", [(ngModel)]="timeModel")
